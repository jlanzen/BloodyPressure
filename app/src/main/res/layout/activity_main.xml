<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="106dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteX="139dp" android:id="@+id/editText3"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/textView3"/>
    <EditText
            android:layout_width="106dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteX="139dp" android:id="@+id/editText4"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/textView4"/>
    <EditText
            android:layout_width="106dp"
            android:layout_height="55dp"
            android:inputType="numberDecimal"
            android:ems="10"
            tools:layout_editor_absoluteY="387dp" tools:layout_editor_absoluteX="139dp" android:id="@+id/editText5"/>
    <TextView
            android:text="Systolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="168dp" android:id="@+id/textView" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"/>
    <TextView
            android:text="Diastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="165dp" android:id="@+id/textView3"
            app:layout_constraintBottom_toTopOf="@+id/editText4" android:layout_marginBottom="20dp"/>
    <TextView
            android:text="Pulse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="175dp" android:id="@+id/textView4" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/editText5"/>
</android.support.constraint.ConstraintLayout>